{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "routes": [
    { "src": "/(.*)", "dest": "/" }
  ]
}

/*
  Notes:
  - Vercel project settings must contain `VITE_SUPABASE_URL`, `VITE_SUPABASE_ANON_KEY`, and `VITE_API_BASE`.
  - We intentionally do not include secrets in this file. Set values in the Vercel dashboard.
  - If you want Vercel to proxy API requests to your Render backend, add a rewrite here with your Render URL.
*/
